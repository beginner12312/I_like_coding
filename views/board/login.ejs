<%- include("../include/header") -%>

<div class="container mt-4">
    <form action="/login" method="POST">
        <fieldset>
            <legend>로그인</legend>
            <div class="mb-3">
                <label for="id" class="form-label">학번</label>
                <input type="text" id="id" class="form-control" name="id">
            </div>
            <div class="mb-3">
                <label for="pw" class="form-label">비밀번호</label>
                <input type="password" id="pw" class="form-control" name="pw">
            </div>
            <button type="submit" class="btn btn-outline-dark">로그인</button>
            <a href="register" class="btn btn-outline-success">아이디가 없나요?</a>  <!--회원가입 페이지로 이동-->
        </fieldset>
    </form>
</div>
<%- include("../include/footer") -%>
